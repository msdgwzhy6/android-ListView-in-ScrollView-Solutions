<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="15dp"
    android:layout_width="match_parent"
    android:background="#ffffff"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/m_logo"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:scaleType="centerInside"
        android:layout_margin="2dp"
        android:src="@drawable/avatar"
        android:background="@null"
        android:layout_alignParentRight="true"
        />

    <TextView
        android:id="@+id/m_title"
        android:textSize="17sp"
        android:scaleX="1.0"
        android:text="123"
        android:paddingRight="52dp"
        android:textColor="#11800A"
        android:layout_marginTop="2dp"
        android:layout_below="@id/m_logo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/m_time"
        android:text="长流轻风"
        android:textSize="12sp"
        android:scaleX="1.0"

        android:textColor="#11800A"
        android:layout_marginTop="10dp"
        android:layout_below="@id/m_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <View
        android:background="#20000000"
        android:layout_marginTop="10dp"
        android:layout_below="@id/m_time"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>


    <TextView
        android:text=""
        android:textColor="#8d8d8d"
        android:textSize="15sp"
        android:lineSpacingExtra="4dp"
        android:textScaleX="1.0"
        android:autoLink="all"
        android:id="@+id/m_content"
        android:paddingRight="8dp"
        android:layout_marginTop="26dp"
        android:layout_marginBottom="1dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/m_time"
        />


    <TextView
        android:id="@+id/m_pic"
        android:layout_marginBottom="8dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_below="@id/m_content" />



</RelativeLayout>
